<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/spacing_extra_small"/>
        </shape>
    </item>
    <item
        android:gravity="top"
        android:drawable="@drawable/gradient_top_strip" />
    <item
        android:gravity="bottom"
        android:drawable="@drawable/gradient_bottom_strip" />
    <item
        android:gravity="left"
        android:drawable="@drawable/gradient_left_strip"/>

    <item
        android:gravity="right"
        android:drawable="@drawable/gradient_right_strip"/>
</layer-list>