<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="@dimen/spacing_small"
        android:id="@+id/iv_user_name"
        android:layout_width="@dimen/button_height_tall"
        android:layout_height="@dimen/button_height_tall"
        android:maxHeight="@dimen/button_height_tall"
        android:maxWidth="@dimen/button_height_tall"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ishu Darshan"
        android:textAlignment="center"
        android:textColor="@color/brownish_grey"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_small"/>

</LinearLayout>