<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/somedate"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:paddingLeft="24dp"
        android:text="15 Dec 1998"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="30sp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:elevation="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:shadowRadius="1"
            android:shadowColor="#b020dc"
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:maxLines="4"
            android:text="Paid for Order\nRestaurant Atithi Palace\nOrder no. #xxxxxxxxxxxxx"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:shadowColor="#b020dc"
            android:shadowRadius="1"
            android:text="â‚¹  200"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/debit"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>