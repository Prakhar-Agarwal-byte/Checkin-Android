<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_waiter_table_number_of_user"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingStart="@dimen/spacing_waiter_table_number_user"
            android:paddingEnd="@dimen/spacing_waiter_table_number_user"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/iv_waiter_table_male"
                android:contentDescription="@null"
                android:src="@drawable/fore_male_grey"
                android:layout_width="@dimen/size_small_button"
                android:layout_height="@dimen/size_small_button" />

            <TextView
                android:layout_marginStart="@dimen/spacing_small"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/iv_waiter_table_male"
                android:id="@+id/tv_waiter_table_number_of_user"
                android:text="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_dine_ine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_marginTop="@dimen/spacing_end_small"
        android:contentDescription="@null"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:id="@+id/ib_waiter_table_menu"
        android:layout_width="@dimen/spacing_layout_height"
        android:layout_height="@dimen/spacing_layout_height"
        android:src="@drawable/ic_waiter_table_menu_cross" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/size_tiny_icon"
        android:layout_below="@+id/cv_waiter_table_number_of_user"
        android:id="@+id/rv_waiter_table_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>