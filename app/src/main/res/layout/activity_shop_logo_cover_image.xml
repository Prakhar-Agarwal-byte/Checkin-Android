<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            style="@style/WhiteCardStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/spacing_small"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small_heading"
                    android:layout_gravity="center_horizontal"
                    android:text="Logo"
                    style="@style/RedTitleStyle"
                    android:paddingTop="@dimen/spacing_small"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_shop_logo"
                    android:src="@drawable/fin"
                    style="@style/LogoImageStyle"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/spacing_small"/>

            </LinearLayout>



        </android.support.v7.widget.CardView>

    </FrameLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shop_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>





</LinearLayout>