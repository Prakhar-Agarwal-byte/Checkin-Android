<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_thumbnail_1"
        android:layout_width="@dimen/size_normal_icon"
        android:layout_height="@dimen/size_normal_icon"
        android:visibility="visible"
        tools:src="@drawable/dummy_alex" />

    <ImageView
        android:id="@+id/im_thumbnail_2"
        android:layout_width="@dimen/size_normal_icon"
        android:layout_height="@dimen/size_normal_icon"
        android:layout_marginStart="@dimen/spacing_small"
        android:visibility="visible"
        tools:src="@drawable/dummy_alex" />

    <FrameLayout
        android:id="@+id/container_thumbnail_3"
        android:layout_width="@dimen/size_normal_icon"
        android:layout_height="@dimen/size_normal_icon"
        android:layout_marginStart="@dimen/spacing_small">

        <FrameLayout
            android:id="@+id/im_thumbnail_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/translucent_black"
            android:visibility="visible"
            tools:background="@drawable/dummy_alex" />

        <TextView
            android:id="@+id/tv_thumbnail_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            tools:text="320+" />
    </FrameLayout>
</LinearLayout>