<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_active_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:elevation="@dimen/card_elevation"
        android:theme="@style/appbar_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/primary_red"
            app:popupTheme="@style/PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/appbar_title"
                    style="@style/WhiteTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_weight="0.3"
                    android:text="@string/active_session"
                    android:textSize="@dimen/font_large"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@drawable/menu_item_price_white"
                    android:paddingTop="@dimen/spacing_extra_small"
                    android:paddingBottom="@dimen/spacing_extra_small">

                    <TextView
                        android:id="@+id/tv_active_session_bill"
                        style="@style/WhiteTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:layout_marginBottom="@dimen/spacing_tiny"
                        tools:text="0000" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/btn_active_session_invoice"
                    android:layout_width="@dimen/size_small_button"
                    android:layout_height="@dimen/size_small_button"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:src="@drawable/ic_cart_white" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/container_first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_active_session"
        app:layout_constraintVertical_weight="0.8">

        <TextView
            android:id="@+id/tv_session_live_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreySmallTextStyle"
            tools:text="You are live at Roma's Cafe"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginStart="@dimen/spacing_normal"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_session_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_session_live_at"
            android:layout_above="@id/tv_title_friends_can_join"

            android:layout_marginStart="@dimen/spacing_small" />

        <TextView
            android:id="@+id/tv_title_friends_can_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinkishGreySmallTextStyle"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:text="@string/your_friends_can_join_by_scanning_qr_code" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_second"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/container_session_actions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_first"
        app:layout_constraintVertical_weight="0.5">

        <TextView
            android:id="@+id/btn_active_session_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:drawableTop="@drawable/ic_action_view_orders"
            android:drawablePadding="@dimen/spacing_extra_small"
            android:text="@string/action_list_orders"
            android:textAlignment="center"
            android:textSize="@dimen/font_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_active_session_menu"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_active_session_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:drawableTop="@drawable/ic_action_show_menu"
            android:drawablePadding="@dimen/spacing_small"
            android:text="@string/action_view_menu"
            android:textAlignment="center"
            android:textSize="@dimen/font_normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_active_session_orders" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_session_actions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_second"
        app:layout_constraintVertical_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_top_inner_shadow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rv_session_recommendations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/GreyTextStyle"
            android:text="@string/recommendation_coming_soon"
            android:textSize="@dimen/font_small"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/container_as_actions_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.5" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container_as_actions_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/swipe_up_card_combined"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_session_recommendations"
            app:layout_constraintVertical_weight="0.8">

            <TextView
                style="@style/PinkishGreySmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_small"
                android:paddingTop="@dimen/spacing_tiny"
                android:text="Swipe Up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_waiter_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_call_waiter_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_as_waiter_pic"
                    style="@style/LogoImageStyle"
                    android:src="@drawable/ic_waiter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_extra_small"
                    android:gravity="center"
                    android:text="@string/waiter"
                    android:textSize="@dimen/font_extra_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_as_waiter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_call_waiter_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_waiter_container"
                app:layout_constraintVertical_bias="0.3"
                tools:text="waiter name" />

            <LinearLayout
                android:id="@+id/ll_call_waiter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_table_cleaning_button"
                app:layout_constraintStart_toEndOf="@id/ll_waiter_container"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_normal_button"
                    android:layout_height="@dimen/button_height_medium"
                    android:src="@drawable/ic_action_call_waiter"
                    android:tint="@color/brownish_grey" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/call_waiter"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_table_cleaning_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_refill_glass_button"
                app:layout_constraintStart_toEndOf="@id/ll_call_waiter_button"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_normal_button"
                    android:layout_height="@dimen/button_height_medium"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_clean_table" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/table_cleaning"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_refill_glass_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ll_table_cleaning_button"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_normal_button"
                    android:layout_height="@dimen/button_height_medium"
                    android:src="@drawable/ic_action_refill_water" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/refill_glass"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>

