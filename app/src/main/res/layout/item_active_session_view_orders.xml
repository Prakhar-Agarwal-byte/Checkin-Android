<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/food_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottom_inner_shadow"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_normal">

            <TextView
                android:id="@+id/tv_orders_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:padding="@dimen/spacing_tiny"
                android:text="3 minutes ago"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/font_tiny" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="Pizza"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_normal"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tv_quantity"/>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bordered_card_brownish_grey"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:gravity="center"
                    android:minWidth="@dimen/size_small_icon"
                    android:paddingStart="@dimen/spacing_extra_small"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_extra_small"
                    android:paddingBottom="@dimen/spacing_tiny"
                    android:text="QTY: 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="$ 2222"
                    android:textColor="@color/primary_red"
                    android:textSize="@dimen/font_normal" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_customization_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="@string/title_toppings"
                    android:textColor="@color/primary_red"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="@string/title_crust"
                    android:textColor="@color/primary_red"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_on_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_toppings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_extra_tiny"
                    android:layout_weight="0.5"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/ll_crust"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_extra_tiny"
                    android:layout_weight="0.5"
                    android:orientation="vertical"/>

            </LinearLayout>

            <View
                android:id="@+id/line_after_add_on"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:background="@color/lightest_grey" />

            <LinearLayout
                android:id="@+id/request_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="@string/title_your_request"
                    android:textColor="@color/primary_red"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:text="requested no cheese"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_standard" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/food_details_container"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/spacing_extra_small"
            android:drawableTop="@drawable/noun_cooking_76171"
            android:text="In Progress"
            android:textSize="@dimen/font_small"
            android:fontFamily="@font/arial_rounded_mt_bold"/>

        <ImageView
            android:id="@+id/im_cancel_order"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/food_details_container"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/size_tiny_icon"
            android:src="@drawable/ic_cancel" />


    </RelativeLayout>

</android.support.v7.widget.CardView>