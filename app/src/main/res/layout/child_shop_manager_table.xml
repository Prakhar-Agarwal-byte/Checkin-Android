<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/WhiteCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_tiny"
    android:layout_marginStart="@dimen/spacing_tiny"
    android:layout_marginEnd="@dimen/spacing_tiny"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingStart="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_extra_small"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shop_manager_table_time"
            android:layout_marginEnd="@dimen/spacing_extra_small"
            android:layout_gravity="end"
            android:textColor="@color/pinkish_grey"
            android:text="4.19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="0.25"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_shop_manager_table_image"
                    style="@style/LogoSmallImageStyle"
                    android:src="@drawable/dummy_monica"/>

                <TextView
                    android:id="@+id/tv_shop_manager_table_name"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:text="Monica"
                    style="@style/GreySmallTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/spacing_extra_small"
                android:layout_marginEnd="@dimen/spacing_extra_small"
                android:orientation="vertical"
                android:layout_weight="0.75"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shop_manager_table_number"
                    android:text="TABLE : 4"
                    android:textSize="@dimen/font_small_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_shop_manager_table_icon"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_non_veg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_shop_manager_table_detail"
                        android:layout_marginStart="@dimen/spacing_tiny"
                        android:layout_marginEnd="@dimen/spacing_tiny"
                        style="@style/GreyTextStyle"
                        android:text="Join the table @4.30 pm."
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_shop_manager_table_person_number"
                        android:text="2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_extra_small"
                        android:background="@drawable/oval_red_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>