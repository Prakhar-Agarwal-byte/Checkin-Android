<?xml version="1.0" encoding="utf-8"?>

<com.alcatraz.admin.project_alcatraz.Utility.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_item_reveal_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/spacing_normal"
    app:dragFromEdge="right">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/whiteedit"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Edit" />

        <ImageButton
            android:id="@+id/btn_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/whitecross"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Remove" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.CardView
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordered_card"
            android:backgroundTint="@color/colorPrimaryRed"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/white"
                    tools:text="Ordered Item name"
                    android:layout_gravity="start|center_vertical"/>

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_normal"
                    android:fontFamily="@font/arial_rounded_mt_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="end|center_vertical"
                    tools:text="Price" />
            </android.support.design.widget.CoordinatorLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</com.alcatraz.admin.project_alcatraz.Utility.SwipeRevealLayout>