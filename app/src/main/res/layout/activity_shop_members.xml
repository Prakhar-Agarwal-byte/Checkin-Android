<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop.ShopPrivateProfile.ShopMembersActivity"
    android:fitsSystemWindows="true"
    >


  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:elevation="@dimen/card_elevation"
      android:id="@+id/dark_back_shop"
      android:background="@drawable/rectangle_brownish_grey"
      android:visibility="gone"
      android:alpha="0.3"
      >

  </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_extra_small"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_add_member"
            android:layout_marginStart="@dimen/spacing_normal"

            android:layout_marginEnd="@dimen/spacing_normal"
            android:src="@drawable/rounded_rectangle_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextShadowCover"
                android:id="@+id/addText"
                android:textColor="@color/white"
                tools:text="ADD MEMBER"
                android:layout_gravity="center"/>
</FrameLayout>


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/member_container"
            android:layout_height="wrap_content">

        </FrameLayout>


    </ScrollView>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation"
        android:id="@+id/change_role_container"
        android:layout_gravity="center">
    </FrameLayout>
</FrameLayout>