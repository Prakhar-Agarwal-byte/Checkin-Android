<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_waiter_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_waiter_table"
            android:elevation="@dimen/app_bar_elevation_size"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/appbar_main">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_waiter_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/white"
                    app:contentInsetEnd="@dimen/content_inset_spacing"
                    app:contentInsetLeft="@dimen/content_inset_spacing"
                    app:contentInsetRight="@dimen/content_inset_spacing"
                    app:contentInsetStart="@dimen/content_inset_spacing"
                    app:layout_scrollFlags="snap"
                    app:popupTheme="@style/PopupOverlay" />

                <include
                    android:id="@+id/menu_header"
                    layout="@layout/waiter_appbar_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/drawer_open"
                    android:layout_width="@dimen/drawer_left_width"
                    android:layout_height="@dimen/drawer_left_hieght"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:src="@drawable/ic_waiter_table_drawer" />

                <ImageView
                    android:id="@+id/action_table_menu"
                    android:layout_width="@dimen/drawer_end_width"
                    android:layout_height="@dimen/drawer_end_hieght"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/spacing_small_tiny"
                    android:layout_marginEnd="@dimen/spacing_small" />

            </FrameLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.TabLayout
            android:layout_below="@id/appbar_waiter_table"
            android:id="@+id/tl_Waiter_Table"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/tab_layout_elevation_size"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@color/colorRed"
            app:tabIndicatorColor="@color/colorRed"
            app:tabTextColor="@color/tab_unselected_text_color"
            android:layout_height="?attr/actionBarSize"/>

        <android.support.v4.view.ViewPager
            android:layout_below="@+id/tl_Waiter_Table"
            android:id="@+id/vp_waiter_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/view_width"
            android:layout_height="@dimen/view_height"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:background="@drawable/oval">

            <ImageView
                android:id="@+id/iv_waiter_table_barcode_scanner"
                android:layout_width="@dimen/barcode_width"
                android:layout_height="@dimen/barcode_height"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorTint"
                android:src="@drawable/noun_qr_code_1340286" />

        </FrameLayout>

    </RelativeLayout>

    <include layout="@layout/incl_account_base" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_table_view"
        android:layout_width="@dimen/nav_end_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
