<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_menu_group_collapsed"
    android:layout_marginBottom="@dimen/spacing_small"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_menu_group_icon"
            android:layout_width="@dimen/size_logo"
            android:layout_height="@dimen/size_logo"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_beer"
            android:layout_marginStart="@dimen/spacing_normal" />

        <TextView
            android:id="@+id/tv_menu_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="GROUP TITLE"
            android:textAlignment="center"
            style="@style/GreyTitleStyle" />

        <LinearLayout
            android:id="@+id/container_menu_sub_groups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_huge"
            android:paddingEnd="@dimen/spacing_small"
            android:paddingStart="@dimen/spacing_small"
            android:visibility="gone">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs_menu_sub_groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/brownish_grey"
                app:tabSelectedTextColor="@color/white"
                app:tabBackground="@drawable/selector_tab_rounded_rouge"
                app:tabIndicatorColor="@color/transparent"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:layout_gravity="top"
                android:visibility="gone">
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg"/>
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non-Veg"/>

            </android.support.design.widget.TabLayout>

            <com.checkin.app.checkin.Utility.DynamicSwipableViewPager
                android:id="@+id/pager_menu_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>