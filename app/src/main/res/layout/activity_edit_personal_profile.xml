<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.checkin.app.checkin.User.PersonalProfile.EditPersonalProfile"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/edit_profile_app_bar"
        android:elevation="@dimen/spacing_normal"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:elevation="@dimen/spacing_normal"
            android:id="@+id/edit_profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="@dimen/notif_heading_size"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_appbar_back"/>
            <Button
                android:layout_width="@dimen/spacing_large"
                android:layout_height="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_small"
                android:id="@+id/btn_done"
                android:layout_gravity="end"
                android:background="@drawable/im_check"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Edit Profile"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/spacing_large"
                />


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Name"/>
    <EditText
        android:id="@+id/et_name"
        android:textColor="@color/brownish_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:inputType="textPersonName"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Location"/>
    <EditText
        android:id="@+id/et_location"
        android:textColor="@color/brownish_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:inputType="text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Bio"/>

    <EditText
        android:textColor="@color/brownish_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:imeOptions="actionNext"
        android:id="@+id/et_bio"
        android:maxLines="3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:orientation="vertical"
        android:background="@drawable/bordered_card_brownish_grey"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_larger"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Personal Information"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Phone Number"/>
        <EditText android:textColor="@color/warm_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:inputType="phone"
            android:id="@+id/et_phoneNumber"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Email"/>
        <EditText android:textColor="@color/warm_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:inputType="textWebEmailAddress"
            android:id="@+id/et_email"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="This information won't be shared on your profile."
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/spacing_normal"/>



    </LinearLayout>


</LinearLayout>
