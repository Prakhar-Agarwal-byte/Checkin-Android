<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_shop_insights"
    tools:context="com.alcatraz.admin.project_alcatraz.Profile.ShopProfile.FragmentShopInsights">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <ScrollView
        android:id="@+id/insights_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:elevation="6dp"
                android:padding="6dp"

                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:background="@mipmap/ic_insights_calender"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:elevation="6dp"
                        android:text="Jun 23 - July 6"
                        android:textSize="20dp" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="10dp"


                android:elevation="6dp"

                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp">

                </com.github.mikephil.charting.charts.LineChart>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="10dp"
                android:elevation="6dp"

                card_view:cardCornerRadius="@dimen/card_corner_radius">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:elevation="6dp">

                </com.github.mikephil.charting.charts.PieChart>


            </android.support.v7.widget.CardView>

            <!--cardview for other isights-->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="6dp"

                card_view:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="420dp"
                                android:layout_height="350dp"
                                android:layout_margin="6dp"

                                android:backgroundTint="@color/insightscardcolor"


                                android:elevation="6dp"
                                android:padding="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:padding="6dp"
                                        android:layout_height="wrap_content"
                                        android:text="No. of new customers"
                                        android:textSize="20dp"/>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:elevation="6dp"

                                        android:background="@color/brownish_grey" />
                                    <com.github.mikephil.charting.charts.LineChart
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:layout_margin="10dp"
                                        android:layout_marginTop="15dp"
                                        android:id="@+id/otherlinechart1">

                                    </com.github.mikephil.charting.charts.LineChart>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="420dp"
                                android:layout_height="350dp"
                                android:layout_margin="6dp"
                                android:backgroundTint="@color/insightscardcolor"

                                android:elevation="6dp"
                                android:padding="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:padding="6dp"
                                        android:layout_height="wrap_content"
                                        android:text="No. of Profile Views"
                                        android:textSize="20dp"/>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:elevation="6dp"

                                        android:background="@color/brownish_grey" />
                                    <com.github.mikephil.charting.charts.LineChart
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:layout_margin="10dp"
                                        android:id="@+id/otherlinechart2">

                                    </com.github.mikephil.charting.charts.LineChart>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="420dp"
                                android:layout_height="350dp"
                                android:layout_margin="6dp"
                                android:backgroundTint="@color/insightscardcolor"


                                android:elevation="6dp"
                                android:padding="6dp">

                                <LinearLayout
                                     android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:padding="6dp"
                                        android:layout_height="wrap_content"
                                        android:text="No. of followers"
                                        android:textSize="20dp"/>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:elevation="6dp"

                                        android:background="@color/brownish_grey" />
                                    <com.github.mikephil.charting.charts.LineChart
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:layout_margin="10dp"
                                        android:id="@+id/otherlinechart3">

                                    </com.github.mikephil.charting.charts.LineChart>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="420dp"
                                android:layout_height="350dp"
                                android:layout_margin="6dp"
                                android:backgroundTint="@color/insightscardcolor"

                                android:elevation="6dp"
                                android:padding="6dp">

                                <LinearLayout
                                     android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:padding="6dp"
                                        android:layout_height="wrap_content"
                                        android:text="No. of checkins"
                                        android:textSize="20dp"/>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:elevation="6dp"

                                        android:background="@color/brownish_grey" />
                                    <com.github.mikephil.charting.charts.LineChart
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:layout_margin="10dp"
                                        android:id="@+id/otherlinechart4">

                                    </com.github.mikephil.charting.charts.LineChart>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="420dp"
                                android:layout_height="350dp"
                                android:layout_margin="6dp"
                                android:backgroundTint="@color/insightscardcolor"

                                android:elevation="6dp"
                                android:padding="6dp">

                                <LinearLayout
                                     android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_margin="10dp"
                                        android:layout_width="match_parent"
                                        android:padding="6dp"
                                        android:layout_height="wrap_content"
                                        android:text="No. of cashback distributed"
                                        android:textSize="20dp"/>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:elevation="6dp"

                                        android:background="@color/brownish_grey" />
                                    <com.github.mikephil.charting.charts.LineChart
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp"
                                        android:layout_margin="10dp"
                                        android:id="@+id/otherlinechart5">

                                    </com.github.mikephil.charting.charts.LineChart>

                                </LinearLayout>

                            </android.support.v7.widget.CardView>


                        </LinearLayout>


                    </HorizontalScrollView>


                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
