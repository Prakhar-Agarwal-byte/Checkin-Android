<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_shop_insights"
    tools:context="com.alcatraz.admin.project_alcatraz.Profile.ShopProfile.FragmentShopInsights">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <ScrollView
        android:id="@+id/insights_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <android.support.v7.widget.CardView
                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                   android:layout_width="match_parent"
                   android:layout_height="60dp"
                   card_view:cardCornerRadius="4dp"
                   android:elevation="6dp"
                   android:padding="6dp"

                   android:layout_marginBottom="8dp">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal">

                       <ImageView
                           android:layout_marginLeft="6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:elevation="6dp"
                           android:background="@mipmap/ic_insights_calender"/>

                       <TextView
                           android:layout_marginLeft="12dp"
                           android:layout_marginTop="4dp"
                           android:clickable="true"
                           android:elevation="6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Jun 23 - July 6"
                           android:textSize="20dp"/>
                   </LinearLayout>





               </android.support.v7.widget.CardView>



               <android.support.v7.widget.CardView
                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                   android:layout_width="match_parent"
                   android:layout_height="350dp"
                   card_view:cardCornerRadius="4dp"
                   android:elevation="6dp"
                   android:padding="6dp"
                   android:layout_marginBottom="8dp">
                  <com.github.mikephil.charting.charts.LineChart
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/linechart"
                      android:layout_marginTop="4dp"
                      android:layout_marginBottom="4dp">

                  </com.github.mikephil.charting.charts.LineChart>


               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="350dp"
                   android:elevation="6dp"
                   android:padding="6dp"

                   android:layout_marginBottom="8dp">


                   <com.github.mikephil.charting.charts.PieChart
                       android:id="@+id/piechart"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginBottom="4dp"
                       android:layout_marginTop="4dp"
                       android:elevation="6dp">

                   </com.github.mikephil.charting.charts.PieChart>


               </android.support.v7.widget.CardView>

               <!--cardview for other isights-->
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="350dp"
                   android:elevation="6dp"
                   android:padding="6dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="70dp"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="No.of destinct customers:"/>
                       <View
                           android:layout_margin="6dp"
                           android:layout_marginLeft="15dp"
                          android:layout_gravity="center_horizontal"
                           android:layout_width="1.5dp"
                           android:layout_height="40dp"
                           android:background="@color/brownish_grey" />


                   </LinearLayout>
               </android.support.v7.widget.CardView>

           </LinearLayout>


    </ScrollView>

</LinearLayout>
