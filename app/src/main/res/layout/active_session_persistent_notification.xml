<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_normal">

    <TextView
        android:id="@+id/tv_session_live_at"
        style="@style/GreyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:drawableStart="@drawable/ic_active_session_logo"
        android:drawablePadding="@dimen/spacing_small"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_as_noti_live_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/ll_menu">

        <ImageView
            android:id="@+id/im_as_noti_restaurant_logo"
            style="@style/LogoSmallImageStyle"
            android:layout_gravity="center"
            tools:src="@drawable/dummy_alex" />

        <ImageView
            android:layout_width="@dimen/size_extra_small_icon"
            android:layout_height="@dimen/size_extra_small_icon"
            android:src="@drawable/ic_location_marker_white"
            android:tint="@color/brownish_grey"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="15dp"
            style="@style/WhiteSmallTextStyle"
            android:layout_gravity="center"
            android:background="@color/primary_red"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:textSize="@dimen/font_tiny"
            android:gravity="center"
            android:text="Live" />

        <TextView
            android:id="@+id/tv_as_noti_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GreySmallTextStyle"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:layout_gravity="center"
            android:textSize="@dimen/font_extra_small"
            tools:text="AT Cheesy does it"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_normal">

            <ImageView
                style="@style/ButtonNormal"
                android:src="@drawable/ic_action_show_menu"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/btn_active_session_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/GreySmallTextStyle"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Start ordering your food!"
                android:layout_gravity="end"
                android:textSize="@dimen/font_extra_small"/>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>