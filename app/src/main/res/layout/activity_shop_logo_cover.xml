<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        style="@style/WhiteCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/RedTitleStyle"
                android:textSize="@dimen/font_small_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="Logo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_sc_logo"
                style="@style/LogoImageStyle"
                android:layout_height="@dimen/size_logo_large"
                android:layout_width="@dimen/size_logo_large"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/spacing_small"
                android:src="@drawable/fin" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        style="@style/RedTitleStyle"
        android:textSize="@dimen/font_small_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="Cover Images" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sc_covers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>