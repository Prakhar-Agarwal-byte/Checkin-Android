<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_normal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="Name"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/et_edit_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/brownish_grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="City"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/et_edit_profile_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/brownish_grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Country"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/et_edit_profile_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/brownish_grey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Bio"
        android:textColor="@color/pinkish_grey"
        android:textSize="@dimen/font_normal" />

    <EditText
        android:id="@+id/et_edit_profile_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/brownish_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="Personal Information"
            android:textAlignment="center"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_larger" />

        <!--<LinearLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: "
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginStart="@dimen/spacing_extra_tiny"
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Ashish Gupta"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:layout_gravity="center"/>

        </LinearLayout>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Phone Number"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_edit_profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="13"
                android:textColor="@color/brownish_grey"
                android:enabled="false"
                android:textSize="@dimen/font_normal"
                tools:text="1234567890" />

            <TextView
                android:id="@+id/tv_edit_save_phone"
                style="@style/RedSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_edit_profile_phone"
                android:layout_alignBottom="@id/et_edit_profile_phone"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/spacing_tiny"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/btn_edit"
                android:textSize="@dimen/font_normal" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_error_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RedSmallTextStyle"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:drawablePadding="@dimen/spacing_extra_small"
            android:drawableStart="@drawable/ic_error_exclamation"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Email"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_edit_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/font_normal"
                android:paddingEnd="@dimen/spacing_huge" />

            <TextView
                android:id="@+id/tv_edit_save_email"
                style="@style/RedSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_edit_profile_email"
                android:layout_alignBottom="@id/et_edit_profile_email"
                android:layout_alignParentEnd="true"
                android:paddingEnd="@dimen/spacing_tiny"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/btn_edit"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="This information won't be shared on your profile."
            android:textAlignment="center"
            android:textColor="@color/pinkish_grey"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

</LinearLayout>

</ScrollView>