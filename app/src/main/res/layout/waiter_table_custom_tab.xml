<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_waiter_table_tab_title"
        android:textColor="@color/color_waiter_table_custom_tab"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tv_waiter_table_tab_title"
        android:id="@+id/tv_waiter_table_tab_number"
        android:textColor="@color/color_waiter_table_custom_tab"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/fl_waiter_table_tab_active"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_waiter_table_tab"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_toEndOf="@id/tv_waiter_table_tab_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_waiter_table_tab_active"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

</RelativeLayout>