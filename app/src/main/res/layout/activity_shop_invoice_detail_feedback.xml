<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_shop_invoice_detail_feedback"
        android:paddingStart="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingTop="@dimen/app_bar_elevation_size"
        android:paddingBottom="@dimen/app_bar_elevation_size"
        android:background="@drawable/background_bottom_grey_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_shop_invoice_detail_feedback_back"
            android:layout_marginTop="@dimen/fab_margin"
            android:contentDescription="@null"
            android:src="@drawable/ic_back_grey"
            android:layout_width="@dimen/drawer_left_hieght"
            android:layout_height="@dimen/drawer_left_hieght" />

        <RelativeLayout
            android:layout_width="@dimen/car_view_size_small_tiny"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="0.75">

            <TextView
                android:id="@+id/tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:layout_marginStart="@dimen/app_bar_elevation_size"
                android:layout_alignBaseline="@id/tv_order_title"
                android:layout_toEndOf="@id/tv_order_title"
                android:id="@+id/tv_hash_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#56743536323"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_shop_invoice_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hash_id"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:text="Dec 5, 2108 10:34 AM"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_shop_invoice_waiter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brownish_grey"
                android:layout_below="@+id/tv_shop_invoice_date"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:text="Waiter :"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tv_shop_invoice_waiter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shop_invoice_date"
                android:layout_marginStart="@dimen/app_bar_elevation_size"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:textColor="@color/brownish_grey"
                android:layout_toEndOf="@id/tv_shop_invoice_waiter_title"
                android:text="Ashish Gupta"
                android:textSize="@dimen/font_normal" />

            <View
                android:id="@+id/tv_shop_invoice_view"
                android:layout_width="@dimen/height_horizontal_line"
                android:layout_height="@dimen/size_tiny_icon"
                android:layout_below="@+id/tv_hash_id"
                android:layout_marginStart="@dimen/thickness_line"
                android:layout_marginTop="@dimen/spacing_bottom_view"
                android:layout_marginEnd="@dimen/thickness_line"
                android:layout_toEndOf="@id/tv_shop_invoice_date"
                android:background="@color/brownish_grey" />

            <TextView
                android:id="@+id/tv_shop_invoice_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hash_id"
                android:layout_marginTop="@dimen/spacing_extra_small"
                android:layout_toEndOf="@id/tv_shop_invoice_view"
                android:text="3 Item's"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/font_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/car_view_size_small_tiny"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_shop_invoice_person" />

                    <TextView
                        android:id="@+id/tv_shop_invoice_user_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/app_bar_elevation_size"
                        android:text="2"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_heading" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shop_invoice_table_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="TABLE 4"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/font_normal" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_shop_invoice_detail_feedback"
        app:tabIndicatorColor="@color/primary_red"
        app:tabSelectedTextColor="@color/primary_red"
        app:tabTextColor="@color/brownish_grey"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@color/white"
        android:elevation="@dimen/card_view_small_elevation"
        android:layout_below="@id/ll_shop_invoice_detail_feedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tl_shop_invoice_detail_feedback"
        android:id="@+id/vp_shop_invoice_detail_feedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>