<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<RelativeLayout
        android:id="@+id/bill_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">-->

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/AppThemeWhiteActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                app:popupTheme="@style/PopupOverlay">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_back"
                        android:layout_width="@dimen/button_height_short"
                        android:layout_height="@dimen/button_height_short"
                        android:layout_marginStart="@dimen/spacing_extra_small"
                        android:layout_marginTop="0dp"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_back_white"
                        android:tint="@color/brownish_grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:padding="@dimen/spacing_extra_small"
                        android:text="@string/title_cheesy_does_it"
                        android:fontFamily="@font/arial_rounded_mt_bold"
                        android:textColor="@color/primary_red"
                        android:textSize="@dimen/font_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/im_back"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <TextView
            android:id="@+id/title_bill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_extra_small"
            android:text="@string/title_bill_details"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/font_small"
            android:background="@color/grey_shade"
            android:layout_below="@+id/appbar"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintBottom_toTopOf="@id/menu_price_container"/>

        <ScrollView
            android:id="@+id/menu_price_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/title_bill_details"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintBottom_toTopOf="@id/payment_mode_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_small">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_ordered_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingBottom="@dimen/spacing_extra_small"
                    android:paddingTop="@dimen/spacing_extra_small"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/grey_shade">

                    <LinearLayout
                        android:id="@+id/ll_waiter_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/spacing_extra_large"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/im_waiter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:src="@drawable/ic_waiter" />

                        <TextView
                            android:id="@+id/text_waiter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_tiny"
                            android:gravity="center"
                            android:text="@string/title_tip_your_waiter"
                            android:textSize="@dimen/font_small" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:text="@string/rs"
                        android:textSize="@dimen/font_largest" />

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/spacing_normal"
                        android:background="@drawable/rounded_rectangle_white"
                        android:paddingStart="@dimen/spacing_small"
                        android:paddingTop="@dimen/spacing_extra_small"
                        android:paddingEnd="@dimen/spacing_small"
                        android:paddingBottom="@dimen/spacing_extra_small"
                        android:text=""
                        android:textColor="@color/brownish_grey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:id="@+id/tv_menu_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Subtotal"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_charges_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Charges"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_taxes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Taxes"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_taxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_promo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Promo-(New)"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_promo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_discount_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Discount"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/spacing_normal"
                    android:background="@color/brownish_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_normal"
                    android:paddingEnd="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total"
                        android:textAllCaps="true"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>



        <LinearLayout
            android:id="@+id/payment_mode_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle_light_grey"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_normal"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/brownish_grey"
                    android:text="Via Cash"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/noun_cash_747843"
                    android:drawablePadding="@dimen/spacing_small"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/noun_line_1668903"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/apple_green"
                    android:text="@string/change"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/title_request_checkout"
                android:textSize="@dimen/font_standard"
                android:textColor="@color/white"
                android:background="@color/primary_red"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_gravity="center"/>



        </LinearLayout>




</android.support.constraint.ConstraintLayout>