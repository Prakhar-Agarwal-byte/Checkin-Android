<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="6">

           <de.hdodenhof.circleimageview.CircleImageView
               style="@style/LogoImageStyle"
               android:layout_width="wrap_content"
               android:layout_height="62dp"
               android:layout_marginHorizontal="10dp"
               android:layout_weight="1"
               android:src="@drawable/dummy_monica" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="5"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Ishu Darshan"
                   android:layout_marginTop="@dimen/spacing_tiny"
                    android:textSize="@dimen/font_normal"
                   android:layout_gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="86reviviews, 215 followes"
                   android:layout_gravity="center"
                   android:textSize="@dimen/font_extra_small"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginRight="@dimen/spacing_tiny"
                        android:layout_marginVertical="2dp"
                        android:elevation="@dimen/card_elevation"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="@dimen/spacing_tiny"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RATED" />
                            <TextView
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_star"/>
                        </LinearLayout>



                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="@dimen/spacing_tiny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_8"
                        tools:layout_editor_absoluteX="154dp"
                        tools:layout_editor_absoluteY="0dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/spacing_small"
                            android:text="FOLLOW"
                            android:textColor="@color/primary_red" />
                    </LinearLayout>


                </LinearLayout>



           </LinearLayout>

       </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_marginHorizontal="@dimen/spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We had a great time @Cheesy Does It. I visited this restaurant by seeing the ratings and profile on Checkin. The Hospitality really amazedâ€¦.read more"/>
</LinearLayout>