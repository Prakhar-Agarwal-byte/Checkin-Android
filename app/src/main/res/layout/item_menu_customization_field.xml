<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small"
    tools:background="@drawable/background_menu_customization">

    <ImageView
        android:id="@+id/im_menu_customization_field_type"
        android:layout_width="@dimen/size_small_icon"
        android:layout_height="@dimen/size_small_icon"
        android:src="@drawable/ic_veg" />

    <TextView
        android:id="@+id/tv_menu_customization_field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_small"
        tools:text="Pizza crust"
        style="@style/WhiteTextStyle" />

    <TextView
        android:id="@+id/tv_menu_customization_field_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_weight="0"
        tools:text="@string/format_currency_rupee"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />

    <CheckBox
        android:id="@+id/cb_menu_customization_field"
        android:layout_width="@dimen/size_small_button"
        android:layout_height="@dimen/size_small_button"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_weight="0"
        android:button="@drawable/checkbox_selector" />
</LinearLayout>